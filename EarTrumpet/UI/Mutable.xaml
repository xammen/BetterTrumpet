<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:bcl="clr-namespace:System;assembly=mscorlib"
                    xmlns:win="clr-namespace:System.Windows;assembly=PresentationFramework">

    <!-- Windows 11 style: larger icons, more spacing -->
    <bcl:Double x:Key="Mutable_AppIconSize">28</bcl:Double>
    <bcl:Double x:Key="Mutable_SliderThumbHeight">16</bcl:Double>
    <bcl:Double x:Key="Mutable_SliderThumbWidth">16</bcl:Double>
    <win:GridLength x:Key="Mutable_IconCellWidth">72</win:GridLength>
    <win:GridLength x:Key="Mutable_VolumeCellWidth">68</win:GridLength>
    <bcl:Double x:Key="Mutable_DeviceTitleCellHeight">48</bcl:Double>
    <bcl:Double x:Key="Mutable_AppItemCellHeight">52</bcl:Double>
    <bcl:Double x:Key="Mutable_DeviceItemCellHeight">60</bcl:Double>
    <bcl:Double x:Key="Mutable_ExpandCollapseButtonGlyphFontSize">12</bcl:Double>
    <bcl:Double x:Key="Mutable_AppVolumeTextFontSize">18</bcl:Double>
    <bcl:Double x:Key="Mutable_DeviceVolumeTextFontSize">24</bcl:Double>
    <bcl:Double x:Key="Mutable_LargeWindowTextFontSize">15</bcl:Double>
    <bcl:Double x:Key="Mutable_AppIconTextFontSize">16</bcl:Double>
</ResourceDictionary>
